<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>게시판</title>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        h1{
            text-align: center;
            margin: 50px 0 50px 0;
        }
        body{
            background-color: #00BFFF;
        }
        #wrep{
            width: 50%;
            height: 600px;
            border-radius: 10px;
            background-color: white;
            margin: 0 auto;
        }
        table {
            width: 50%;
            /*border-top: 3px solid black;*/
            text-align: center;
            border-collapse: collapse;
            position: absolute;
            left: 25%;
        }
        tr:nth-child(1) th:nth-child(1){
            width: 50px;
        }
        tr:nth-child(1) th:nth-child(3){
            width: 50px;
        }
        th, td{
            /*border-bottom: 1px solid #888888;*/
            padding: 10px;
        }
        tr:first-child, tr:last-child{
            border-bottom: 1px solid #888888;
        }
        tr:nth-child(even){
            background-color: #EEFFFF;
        }
        #add{
            width: 70px;
            height: 30px;
            position: absolute;
            bottom: 150px;
            right: 480px;
        }
        #search_box{
            position: absolute;
            top: 100px;
            right: 480px;
        }
        .box, .search, .btn_search{
            height: 25px;
        }
        .btn_search{
            width: 30px;
        }
        #sign_out{
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
    <script>
        function add(){
            location.href = "./add";
        }
    </script>
</head>
<body>
    <h1>게시판</h1>
    <a href = "/" id = "sign_out">로그아웃</a>
    <div id = "wrep">
        <form method="post">
            <div id ="search_box">
                <select name="box" class ="box">
                    <option value="0">해당없음</option>
                    <option value="1">제목</option>
                    <option value="2">번호</option>
                </select>
                <input type="text" name="search" class="search">
                <input type="submit" value="검색" class="btn_search">
            </div>
        </form>
        <table border-top="1">
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>삭제</th>
            </tr>
            <% result.forEach(function(item, index) { %>
                <tr>
                    <td>
                        <a href="/space/<%=item.board_no%>"><%= item.board_no %></a>
                    </td>
                    <td>
                        <a href="/space/<%=item.board_no%>"><%= item.board_title %></a>
                    </td>
                    <td>
                        <a href="/delete/<%=item.board_no%>">X</a>
                    </td>
                </tr>
            <% }); %>
        </table>
        <input type="button" value="글쓰기" id = "add" onclick="add()">
    </div>
</body>
</html>